{
  "name": "clear-ledger",
  "version": "1.0.0",
  "description": "Reusable wallet service module with credit, debit, fee, reward, reporting, and more. Built with NestJS and TypeScript.",
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
