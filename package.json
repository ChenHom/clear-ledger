  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/swagger": "^6.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "mysql2": "^3.6.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@nestjs/testing": "^9.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "supertest": "^6.3.3"
  },
